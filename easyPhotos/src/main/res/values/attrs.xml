        <attr name="easy_panEnabled" format="boolean" />
        <attr name="easy_zoomEnabled" format="boolean" />
        <attr name="easy_quickScaleEnabled" format="boolean" />
        <attr name="easy_tileBackgroundColor" format="color" />
    </declare-styleable>
