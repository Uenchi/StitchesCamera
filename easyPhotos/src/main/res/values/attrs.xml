    <declare-styleable name="JCameraView">
        <attr name="easy_iconSize" format="dimension" />
        <attr name="easy_iconMargin" format="dimension" />
        <attr name="easy_iconSrc" format="reference" />
        <attr name="easy_iconLeft" format="reference" />
        <attr name="easy_iconRight" format="reference" />
        <attr name="easy_duration_max" format="integer" />
