<resources>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="easyMetaButtonBarStyle" format="reference" />
        <attr name="easyMetaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PuzzleView">
        <attr name="easy_line_size" format="integer" />
        <attr name="easy_line_color" format="color" />
        <attr name="easy_selected_line_color" format="color" />
        <attr name="easy_handle_bar_color" format="color" />
        <attr name="easy_need_draw_line" format="boolean" />
        <attr name="easy_need_draw_outer_line" format="boolean" />
        <attr name="easy_piece_padding" format="dimension" />
        <attr name="easy_animation_duration" format="integer" />
